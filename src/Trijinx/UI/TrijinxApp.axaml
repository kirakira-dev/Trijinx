<Application
    x:Class="Trijinx.Ava.TrijinxApp"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sty="using:FluentAvalonia.Styling"
    xmlns:ext="clr-namespace:Trijinx.Ava.Common.Markup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <FontFamily x:Key="JetBrainsMono">avares://Trijinx/Assets/Fonts/Mono/#JetBrains Mono</FontFamily>
                </ResourceDictionary>
                <MergeResourceInclude Source="/Assets/Styles/Themes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.Styles>
        <sty:FluentAvaloniaTheme PreferUserAccentColor="True" PreferSystemTheme="False" />
        <StyleInclude Source="/Assets/Styles/Styles.xaml" />
    </Application.Styles>
    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="{ext:Locale MenuBarHelpAbout}" Click="AboutTrijinx_OnClick" />
        </NativeMenu>
    </NativeMenu.Menu>
</Application>
